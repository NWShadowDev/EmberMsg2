{{#if addNewQuestion}}
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input class="form-control" value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="content">Question</label>
      {{input class="form-control" value=content id="content"}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
      {{input class="form-control" value=notes id="notes"}}
    </div>
    <button {{action 'saveQuestionHandler'}} class="btn" type="button" name="button">Add Question</button>
    <button {{action 'cancelSaveQuestion'}} type="button" class="btn">Cancel</button>
  </form>
  {{else}}
    <button {{action 'questionFormShow'}} class="btn" type="button" name="button">New Question</button>
  {{/if}}
