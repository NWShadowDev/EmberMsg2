<div class="container" id="questions">
  {{question.content}}
  By: {{question.author}}
  Notes: {{question.notes}}
  <button {{action 'deleteQuestionHandler' question}} type="button" class="btn">Delete Question</button>
{{update-question updateQuestionSender="updateQuestionSender" question=question}}
{{new-answer saveAnswerSender="saveAnswerSender" question=question}}
</div>

<div class="container" id="answers">
  {{#each question.answers as |answer|}}
  {{answer-tile answer=answer deleteAnswerSender="deleteAnswerSender"}}

{{else}}
<h3>No Answers</h3>
<button {{action 'AnswerFormShow'}} type="button" class="btn" style="margin-bottom:5px;">New Answer</button>
{{/each}}
</div>
