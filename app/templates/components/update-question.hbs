{{#if updateQuestion}}
    <div class="container header">
      <h3>Update {{question.author}}'s Question</h3>
    </div>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input class="form-control" value=author id="author" placeholder=question.author}}
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          {{input class="form-control" value=content id="content" placeholder=question.content}}
        </div>
        <div class="form-group">
          <label for="notes">Notes</label>
          {{input class="form-control" value=notes id="notes" placeholder=question.notes}}
        </div>
        <button {{action 'updateQuestionHandler' question}} type="button" class="btn">Save</button>
        <button {{action 'cancelUpdateQuestion'}} type="button" class="btn">Cancel</button>
      </form>
    </div>
{{else}}
  <button class="btn" {{action 'updateQuestionFormShow'}}>Update Question</button>
{{/if}}
