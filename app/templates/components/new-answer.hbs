{{#if addNewAnswer}}

    <div class="container">
      <h3>Add Answer</h3>
    </div>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input class="form-control" value=author id="author"}}
        </div>
        <div class="form-group">
          <label for="content">Answer</label>
          {{textarea rows="4" cols="50" class="form-control" value=content id="content"}}
        </div>
        <button {{action 'saveAnswerHandler'}} type="button" class="btn">Add Answer</button>
        <button {{action 'cancelSaveAnswer'}} type="button" class="btn">Cancel</button>
      </form>
    </div>
{{else}}
  <button {{action 'AnswerFormShow'}} type="button" class="btn" style="margin-bottom:5px;">New Answer</button>
{{/if}}
