<div class="container" id="questions">
  <h4>{{question.content}}</h4>

<p>By: {{question.author}}</p>
<p>{{answer-format numberOfAnswers}}</p>
{{#if question.onList}}
   <button class="btn" type="button" {{action 'removeFavoriteQuestionHandler' question}}>Remove</button>
    {{else}}
    <button class="btn" type="button" {{action 'favoriteQuestionHandler' question}}>Favorite</button>
{{/if}}
  {{#link-to 'question' question.id}}<button class="btn" type="button" name="button">Question Details</button>{{/link-to}}
</div>
